LSDev.Common.Javascript.Event = {
    
    // Adds the specified function as a listener, calling it when the event is dispatched.
    //
    // RETURNS void
    addEventListener: function( func ) {
        throw new Error( "Event.addEventListener is not defined for: " + this );
    },
    
    // Removes the specified function as a listener.
    //
    // RETURNS void
    removeEventListener: function( func ) {
        throw new Error( "Event.removeEventListener is not defined for: " + this );
    },
    
    // Removes all listeners from the event.
    //
    // RETURNS void
    clearEventListeners: function() {
        throw new Error( "Event.clearEventListeners is not defined for: " + this );
    },
    
    // Dispatches the events, notifying all listeners.
    //
    // RETURNS void
    dispatchEvent: function( e ) {
        throw new Error( "Event.dispatchEvent is not defined for: " + this );
    }
}